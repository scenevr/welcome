<!--
  An example of what you can do with the voxel fields. This voxel
  field is generated using voxel tools an expressed as a data-uri. Future
  versions of the scenevr editor will have voxel import support, and
  a nicer way to generate procedural voxel fields.
  
  https://github.com/scenevr/voxel-tools
  
-->

<scene>
  <spawn position="0 0 20" />
  
  <skybox style="color: linear-gradient(#aaaaaa, #000000)" />
  
  <!-- Golden teapot -->
  <model src="/models/teapot.obj" rotation="0 1.57 0" position="2 5.5 8" style="color: #ffbb00; metal: 1.0" scale="0.5 0.5 0.5" />

  <!-- Make a ramp up to the teapot -->
  <box position="2 1.3 12.8" scale="1 10 1" rotation="-0.9 0 0" style="color: #ff00aa" scale="1 1 1" />
  
  <voxel id="voxel" src="data:" position="0 14.01 0" />

</scene>